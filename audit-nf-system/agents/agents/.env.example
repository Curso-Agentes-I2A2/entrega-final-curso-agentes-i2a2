# ========================================================================
# CONFIGURAÇÕES GERAIS
# ========================================================================

ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8002

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ========================================================================
# API KEYS
# ========================================================================

# Anthropic Claude (Obrigatório)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI (Opcional - para fallback)
OPENAI_API_KEY=sk-your-openai-key-here

# ========================================================================
# MODELOS
# ========================================================================

# Claude
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_TEMPERATURE=0.1
CLAUDE_MAX_TOKENS=4096

# OpenAI (fallback)
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4096

# ========================================================================
# SERVIÇOS EXTERNOS
# ========================================================================

# MCP Service (opcional)
MCP_URL=http://localhost:8003
BACKEND_URL=http://localhost:8000

# ========================================================================
# AGENTES
# ========================================================================

# Validação
VALIDATION_AGENT_ENABLED=True
VALIDATION_STRICT_MODE=True

# Auditoria
AUDIT_AGENT_ENABLED=True
AUDIT_CONFIDENCE_THRESHOLD=0.85

# Sintético
SYNTHETIC_AGENT_ENABLED=True

# ========================================================================
# TIMEOUTS E RETRY
# ========================================================================

API_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0

# ========================================================================
# CACHE
# ========================================================================

ENABLE_CACHE=True
CACHE_TTL=3600

# ========================================================================
# LOGS
# ========================================================================

LOG_LEVEL=INFO
LOG_FILE=agents.log

# ========================================================================
# REGRAS FISCAIS
# ========================================================================

DEFAULT_STATE=SP
ICMS_STANDARD_RATE=18.0
ICMS_REDUCED_RATE=7.0

# ========================================================================
# DESENVOLVIMENTO
# ========================================================================

# Usar mocks para serviços externos (RAG, MCP)
MOCK_EXTERNAL_SERVICES=True

# Habilitar streaming de tokens
ENABLE_STREAMING=True
